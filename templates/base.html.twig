<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block header %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<p>Nom: {{ app.user.username }}</p>
<a class="text-muted" href="{{ path('app_logout') }}">logout </a>
{% else %}
<p>Aller sur <a href="{{ path('app_login') }}">la page de connexion</a> ou alors sur
    <a href="{{ path('app_register') }}">la page d'inscription </a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
<p><a href="{{ path('admin') }}">Aller sur l'admin</a>

    {% endif %}
    {% endblock %}
    {% block body %}
    {% endblock %}
</body>
</html>
